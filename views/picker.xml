<Alloy>
  <Label id="input" class="input" />

  <Popover id="popover" class="popover" platform="ios" formFactor="tablet">
    <LeftNavButton>
      <Button class="cancel" onClick="onCancelClick" />
    </LeftNavButton>
    <RightNavButton>
      <Button class="done" onClick="onDoneClick" />
    </RightNavButton>
  </Popover>

  <TableViewRow id="pickerRow" class="popover" platform="ios" formFactor="phone"
  </TableViewRow>

  <Picker id="picker" class="picker" />
</Alloy>
